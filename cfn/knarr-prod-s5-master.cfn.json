{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "prod-knarr-app-s5 Master Template",
  "Parameters": {
    "ResourcesTemplate": {
      "Description": "The key of the template for the resources required to run the app",
      "Type": "String",
      "Default": "knarr-prod-s5-resources.cfn.json"
    },
    "AppTemplate": {
      "Description": "The key of the template for the EB app/env substack",
      "Type": "String",
      "Default": "knarr-prod-s5-beanstalk.cfn.json"
    },
    "KeyName": {
      "Type": "String",
      "Default": "default"
    },
    "InstanceType": {
      "Type": "String",
      "Default": "t1.micro"
    },
    "ApplicationName": {
      "Type": "String",
      "Default": "knarr-prod-s5"
    },
    "Environment": {
      "Type": "String",
      "Default": "knarr-prod-s5"
    },
    "IamInstanceProfile": {
      "Type": "String",
      "Default": "EbApp"
    }
  },
  "Resources": {
    "AppResources": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              "http://s3.amazonaws.com/br-templates",
              "prod-knarr-app-s5",
              {
                "Ref": "ResourcesTemplate"
              }
            ]
          ]
        },
        "Parameters": {
          "ApplicationName": {
            "Ref": "ApplicationName"
          }
        }
      }
    },
    "App": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              "http://s3.amazonaws.com/",
              {
                "Ref": "ApplicationName"
              },
              {
                "Ref": "AppTemplate"
              }
            ]
          ]
        },
        "Parameters": {
          "KeyName": {
            "Ref": "KeyName"
          },
          "InstanceSecurityGroup": {
            "Fn::GetAtt": [
              "AppResources",
              "Outputs.InstanceSecurityGroup"
            ]
          },
          "InstanceType": {
            "Ref": "InstanceType"
          },
          "ApplicationName": {
            "Ref": "ApplicationName"
          },
          "Environment": {
            "Ref": "Environment"
          },
          "IamInstanceProfile": {
            "Ref": "IamInstanceProfile"
          }
        }
      }
    }
  },
  "Outputs": {
    "URL": {
      "Description": "URL of the AWS Elastic Beanstalk Environment",
      "Value": {
        "Fn::GetAtt": [
          "App",
          "Outputs.URL"
        ]
      }
    }
  }
}
